<!DOCTYPE html>
<html>
  <head>
    <title>Asciify</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar .navbar-dark bg-dark justify-content-between">
    <%= link_to "ASCIIFY", {action: 'index', controller: 'uploads'}, class: 'navbar-brand nav-bar-brand-title' %>
    <form class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    <form class="form-inline">
      <%= link_to "Upload Image", {action: 'new', controller: 'uploads'}, class: 'btn btn-secondary' %>
    </form>
  </nav>

  <body>
    <%= yield %>
  </body>
</html>